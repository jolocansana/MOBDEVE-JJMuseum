<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="5"
        android:paddingVertical="10dp"
        android:background="@color/theme_orange">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/back_icon"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="Item Name"
            android:textSize="20dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/floorIv"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        tools:srcCompat="@tools:sample/avatars"/>

    <LinearLayout
        android:id="@+id/pictures"
        app:layout_constraintTop_toBottomOf="@id/floorIv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="3.5"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/map1Iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            tools:srcCompat="@tools:sample/avatars"
            android:background="@drawable/style_custom_border"/>

        <ImageView
            android:id="@+id/map2Iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            tools:srcCompat="@tools:sample/avatars"
            android:background="@drawable/style_custom_border"/>

        <ImageView
            android:id="@+id/map3Iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            tools:srcCompat="@tools:sample/avatars"
            android:background="@drawable/style_custom_border"/>
    </LinearLayout>

    <TextView
        android:id="@+id/floor_nameTv"
        app:layout_constraintTop_toBottomOf="@id/pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ITEM NAME"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/floor_descTv"
        app:layout_constraintTop_toBottomOf="@id/floor_nameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ITEM DESCRIPTION"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textSize="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>