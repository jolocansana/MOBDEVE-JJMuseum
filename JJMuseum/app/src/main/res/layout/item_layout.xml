<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:weightSum="20">

    <FrameLayout
        android:id="@+id/main_asset_holder_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_gravity="center"
            android:id="@+id/itemIv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars"
            />

        <VideoView
            android:layout_gravity="center"
            android:id="@+id/videoview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"/>

    </FrameLayout>
    
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/main_asset_holder_fl"
        android:id="@+id/itemWheelLL"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="3.5"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item1Iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            tools:srcCompat="@tools:sample/avatars"
            android:background="@drawable/style_custom_border"/>

        <ImageView
            android:id="@+id/item2Iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            tools:srcCompat="@tools:sample/avatars"
            android:background="@drawable/style_custom_border"/>

        <ImageView
            android:id="@+id/item3Iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            tools:srcCompat="@tools:sample/avatars"
            android:background="@drawable/style_custom_border"/>
    </LinearLayout>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/itemWheelLL"
        android:id="@+id/item_nameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ITEM NAME"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/item_nameTv"
        android:id="@+id/item_collectionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collection"
        android:textSize="15dp"
        android:layout_marginTop="10dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/item_collectionTv"
        android:id="@+id/item_time_originTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Origin"
        android:textSize="15dp"/>


    <TextView
        app:layout_constraintTop_toBottomOf="@+id/item_time_originTv"
        android:id="@+id/item_descriptionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Description"
        android:justificationMode="inter_word"
        android:textSize="15dp"
        android:paddingBottom="20dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/item_descriptionTv"
        android:id="@+id/commentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="COMMENTS"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        app:layout_constraintTop_toBottomOf="@id/commentTv"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/commentusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <EditText
                android:id="@+id/nameEt"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:layout_weight="4"
                android:hint="Enter Username"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_comment" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Send"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:background="@drawable/style_custom_button"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/commentLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/style_comment">

            <EditText
                android:id="@+id/commentEt"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:layout_weight="3"
                android:layout_marginRight="20dp"
                android:background="@drawable/style_comment"
                android:hint="Enter Comment"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@id/comments"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="300dp"
        android:layout_marginVertical="20dp">

        <ListView
            android:nestedScrollingEnabled="true"
            android:id="@+id/comment_listLv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/comments"
            android:dividerHeight="10dp"
            android:divider="@color/theme_grey">

        </ListView>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>