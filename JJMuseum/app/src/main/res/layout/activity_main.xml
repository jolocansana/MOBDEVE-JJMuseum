<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/theme_grey">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="8"
        android:padding="20dp"
        android:background="@color/theme_orange">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:textStyle="bold"
            android:textColor="@color/theme_darkgrey"
            android:text="JJ Museum"
            android:textSize="28dp"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/qr_button"
            android:layout_width="20dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/qr_icon"
            android:layout_marginRight="10dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/search_button"
            android:layout_width="20dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/search_icon"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_weight="6"
        android:weightSum="2"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Welcome to JJ Museum!"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check out different sections of the museum!"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        android:layout_marginBottom="30dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontal_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </ScrollView>

    <TextView
        android:id="@+id/tv_other_features"
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scrollview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Other Features"
        android:textStyle="bold"
        android:textSize="20dp" />

    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:id="@+id/cv_map_button"
        app:layout_constraintTop_toBottomOf="@id/tv_other_features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_map_header"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Map"
                android:textSize="30dp"
                android:textColor="@color/theme_darkgrey"
                />

            <TextView
                android:id="@+id/tv_map_desc"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See the map of the museum!"
                android:textSize="18dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>